{
  "name": "@pardjs/cms-service",
  "version": "1.0.0",
  "description": "",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "precommit": "lint-staged",
    "travis-deploy-once": "travis-deploy-once",
    "doc": "npx compodoc -p tsconfig.json -s",
    "gen-db-migration": "ts-node ./node_modules/typeorm/cli.js  migration:generate -n",
    "migrate-db": "ts-node ./node_modules/typeorm/cli.js migration:run"
  },
  "dependencies": {
    "@nestjs/common": "^6.10.14",
    "@nestjs/core": "^6.10.14",
    "@nestjs/microservices": "^6.10.14",
    "@nestjs/platform-express": "^6.10.14",
    "@nestjs/swagger": "^4.1.12",
    "@nestjs/typeorm": "^6.2.0",
    "@nestjs/websockets": "^6.10.14",
    "@pardjs/common": "^1.1.4-rc4",
    "@pardjs/auth-service-common": "^0.1.1-rc5",
    "@pardjs/auth-service-sdk": "^0.0.4",
    "@sentry/node": "^5.11.0",
    "ali-oss": "^6.4.0",
    "class-validator": "^0.11.0",
    "cookie-parser": "^1.4.4",
    "dotenv": "^8.2.0",
    "pg": "^7.17.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "2.6.3",
    "rxjs": "6.5.4",
    "swagger-ui-express": "^4.1.2",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@nestjs/testing": "6.10.14",
    "@types/cookie-parser": "^1.4.2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "4.17.2",
    "@types/jest": "24.0.25",
    "@types/node": "13.1.6",
    "@types/supertest": "2.0.8",
    "@types/uuid": "^3.4.6",
    "coveralls": "^3.0.9",
    "cz-conventional-changelog": "^3.0.2",
    "jest": "24.9.0",
    "lint-staged": "^9.5.0",
    "nodemon": "2.0.2",
    "prettier": "1.19.1",
    "shelljs": "^0.8.3",
    "supertest": "4.0.2",
    "ts-jest": "24.3.0",
    "ts-node": "8.6.2",
    "tsconfig-paths": "3.9.0",
    "tslint": "5.20.1",
    "typescript": "3.7.4"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
